<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:id="@+id/llButtons"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/widget_margin">
        <ImageButton
            android:id="@+id/ibPrev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_skip_previous_white_24dp"/>
        <ImageButton
            android:id="@+id/ibSettings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_settings_white_24dp"/>
        <ImageButton
            android:id="@+id/ibNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_skip_next_white_24dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_above="@id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_widget_border">
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorDescrText"
            android:textSize="@dimen/appname_text_size"
            android:textStyle="bold"
            android:text="@string/appName"
            android:background="@drawable/custom_header_border"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_below="@id/tvAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/text_vertical_margin_small"
            android:layout_marginBottom="@dimen/text_vertical_margin_small"
            android:paddingLeft="@dimen/text_horizontal_margin"
            android:paddingRight="@dimen/text_horizontal_margin"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/header_text_size"
            android:textStyle="bold|italic"
            android:text="@string/tvEmptyTitleText"/>
        <TextView
            android:id="@+id/tvDescr"
            android:layout_below="@id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/text_horizontal_margin"
            android:paddingRight="@dimen/text_horizontal_margin"
            android:textColor="@color/colorDescrText"
            android:textSize="@dimen/descr_text_size"
            android:text="@string/tvEmptyDescrText"/>
    </RelativeLayout>
</RelativeLayout>